.progress-footer {
    position: absolute;
    bottom: -3px;
    left: 0;
    right: 0;
    color: #999;
    font-size: 24px;
    text-align: center;
    padding: 0 40px;
    height: 100px;
    background: #fff;
    .progress-mask{
        position: absolute;
        top: -65px;
        height: 100px;
        left: 0;
        right: 0;
        margin: 0;
        padding: 0;
        display: inline-block;
        background: url(../../assets/images/packageIntroBg.png) 0 0 no-repeat;
        background-size: cover;
        z-index: 1;
    }

    @extend %clearfix;
    .footer-page-box{
        position: relative;
        float: left;
        font-size: 24px;
        color: #333;
        line-height: 100px;
        z-index: 4;
        .symbol{
            color: #999;
        }
    }
    .footer-page-btn-wrap {
        position: relative;
        float: right;
        padding-top: 16px;
        z-index: 4;
        @extend %clearfix;
        .btn-prev{
            margin-right: 20px;
            float: left;
            color: #426eaf;
            background-color: #fff;
            &:active{
                background: color(#fff shade(10%));
            }
        }
        .btn-next{
            float: right;
            background-color: #426eaf;
            color: #fff;
            &:active{
                background: color(#426eaf shade(10%));
            }
        }
        .btn {
            width: 172px;
            height: 60px;
            border-radius: 60px;
            line-height: 60px;
            font-size: 28px;
            border: 3px solid #426eaf;
        }
    }
}


#audio-player{
    opacity: 0;
    width: 1px;
    height: 1px;
}

#progress-wrap{
    position: absolute;
    left: -20px;
    right: -20px;
    bottom: -20px;
    height: 6px;
    background: #ccc;
    z-index: 10;
    overflow: hidden;
    .progress{
        width: 0;
        height: 100%;
        background: #426eaf;
        transition: width 0.6s;
    }
}